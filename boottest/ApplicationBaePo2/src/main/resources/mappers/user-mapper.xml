<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kh.test.user.model.dao.UserMapper">
	               <!-- 띄어쓰기 필요 !!!!!!!!!!!!! -->
	
	<!-- id : 무엇으로 부르는지 설정 type : user의 DTO 패키지 이름-->
	<resultMap id="user_rm" type="User">
		<id property="userNo" column="USER_NO" />
		<result property="userId" column="USER_ID" />
		<result property="userName" column="USER_NAME" />
		<result property="userAge" column="USER_AGE" />
	</resultMap>
	
	<!-- id : mapper의 메서드 이름 resultMap : resultMap의 id 값 -->
	<select id="selectUserNo" resultMap="user_rm">
		SELECT * FROM TB_USER
		WHERE USER_NO = #{userNo}
	</select>

</mapper>